        // Capture screenshot as file
        TakesScreenshot ts = (TakesScreenshot)BasePage.driver;
        File srcFile = ts.getScreenshotAs(OutputType.FILE);
        // Define the path to save the screenshot
        File desFile = new File("./reports/" + screenshotName + ".jpg");
        // Create the directory if it doesn't exist
      // Files.createDirectories(Paths.get("./reports/"));
        // Copy the screenshot to the reports folder
       // Files.copy(srcFile.toPath(), desFile.toPath());
        return desFile.getAbsolutePath();
        // Embed screenshot in the report
        // Add code to embed the screenshot in the report if needed
    } catch (IOException e) {
        e.printStackTrace();
    }
	return screenshotName;
	
}